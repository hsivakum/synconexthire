<?xml version="1.0" encoding="UTF-8"?>
<web-app  xmlns="http://java.sun.com/xml/ns/j2ee"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"   version="2.4" >
  <display-name>Synconext</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>SearchController</servlet-name>
    <servlet-class>com.servlet.Controller</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DataServlet</servlet-name>
    <servlet-class>com.servlet.DataServlet</servlet-class>
  </servlet>
    <servlet>
    <servlet-name>Sorting</servlet-name>
    <servlet-class>com.servlet.Sorting</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SearchController</servlet-name>
    <url-pattern>/SearchController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DataServlet</servlet-name>
    <url-pattern>/DataServlet</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>Sorting</servlet-name>
    <url-pattern>/Sorting</url-pattern>
  </servlet-mapping>
</web-app>